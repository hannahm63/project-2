<section class="intro pt-1" id="intro">

    <div class="space-invader space-invader-1 classic"></div>
    <div class="space-invader space-invader-2 classic"></div>
    <div class="space-invader space-invader-3 classic"></div>
    <div class="space-invader space-invader-4 classic"></div>
    <div class="space-invader space-invader-5 classic"></div>
    <div class="space-invader space-invader-6 classic"></div>

    <div class="space-invader space-invader-7 classic"></div>
    <div class="space-invader space-invader-8 classic"></div>
    <div class="space-invader space-invader-9 classic"></div>
    <div class="space-invader space-invader-10 classic"></div>
    <div class="space-invader space-invader-11 classic"></div>
    <div class="space-invader space-invader-12 classic"></div>

    <form method="GET">
        <div class="container text-center pt-5">
            <div class="row">
                <div class="col-md-6 offset-md-3  pt-5">
                    <div class="form-group text-light">
                        <label for="game_input" class="logo">GameOn <i class="fas fa-gamepad"></i></label>
                        <input class="form-control" type="text" id="game_input" placeholder="Search Games">

                        <div class="svg-wrapper">
                            <svg height="60" width="320" xmlns="http://www.w3.org/2000/svg">
                                <rect class="shape" height="60" width="320" />
                            </svg>
                            <Button class="text" id="main_search">SEARCH</button>
                        </div>

                        <div>
                            <p>{{result.title}}</p>
                            <p>{{result.releaseDate}}</p>
                            <p>{{result.description}}</p>
                            <div>
                                <p>{{result.genre}}</p>
                            </div>
                            <img src="{{result.image}}">
                            <p>{{result.developer}}</p>
                            <p>{{result.publisher}}</p>
                            <p>{{result.rating}}</p>
                            {{!-- <p>{{results.alsoAvailableOn}}</p> --}}
                        </div>

                        <div>
                            <div class="container">
                                <form action="/api/games" method="POST">
                                    <div class="form-group">
                                        <label for="userAlias">Alias</label>
                                        <input type="text" class="form-control" id="userAlias"
                                            placeholder="Player Name">
                                    </div>
                                    <div class="form-group">
                                        <label for="star-rating">Rate this game</label>
                                        <div class="container">
                                            <div class="stars">
                                                <div>
                                                    <input class="star star-1" id="star-1" type="radio" name="star"
                                                        value="1">
                                                    <label class="star star-1" for="star-1"></label>
                                                    <input class="star star-2" id="star-2" type="radio" name="star"
                                                        value="2">
                                                    <label class="star star-2" for="star-2"></label>
                                                    <input class="star star-3" id="star-3" type="radio" name="star"
                                                        value="3">
                                                    <label class="star star-3" for="star-3"></label>
                                                    <input class="star star-4" id="star-4" type="radio" name="star"
                                                        value="4">
                                                    <label class="star star-4" for="star-4"></label>
                                                    <input class="star star-5" id="star-5" type="radio" name="star"
                                                        value="5">
                                                    <label class="star star-5" for="star-5"></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="review">Leave a Review!</label>
                                            <textarea class="form-control" id="review-text" rows="3" name="review"
                                                data-title="{{result.title}}" data-platform="{{query}}"></textarea>
                                        </div>
                                        <div class="text-right">
                                            <button type="submit" class="btn btn-primary btn-md" id="addreview-btn">Add
                                                Review</button>
                                        </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>



</section>